{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": false, // TODO: change
    "outDir": "./dist",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": false
  },
  "exclude": [
    "node_modules/**",
    "dist/**"
  ],
  "include": [
    "lib/**/*.ts",
    "api/**/*.ts",
    "index.ts",
    "test/**/*.test.ts"
  ]
}
