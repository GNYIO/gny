{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "DEBUG_1",
      "program": "${workspaceFolder}/packages/main/dist/src/app.js",
      "cwd": "${workspaceFolder}",
      "args": ["--ormConfig", "ormconfig.json"],
      "env": {
        "DEBUG": "debug"
      },
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "second Node",
      "program": "${workspaceFolder}/createSecondNode.js",
      "cwd": "${workspaceFolder}",
      "args": ["2"],
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    },
    {
      "type": "node",
      "runtimeVersion": "10.16.2",
      "request": "launch",
      "name": "Unit Tests",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "args": [
          "--verbose",
          "--runInBand",
          "--no-cache",
          "test/unit/core/ConsensusHelper"
      ],
      "runtimeArgs": [
          "--nolazy"
      ],
      "console": "internalConsole",
      "env": {
          "NODE_ENV": "test"
      },
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    },
    {
      "type": "node",
      "runtimeVersion": "10.16.2",
      "request": "launch",
      "name": "Integration Tests",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "args": [
          "--verbose",
          "--runInBand",
          "--no-cache",
          "test/integration"
      ],
      "runtimeArgs": [
          "--nolazy"
      ],
      "console": "integratedTerminal",
      "env": {
          "NODE_ENV": "test"
      },
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "auditAllPackages",
      "program": "${workspaceFolder}/auditAllPackages.js",
      "cwd": "${workspaceFolder}",
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    }
  ]
}
